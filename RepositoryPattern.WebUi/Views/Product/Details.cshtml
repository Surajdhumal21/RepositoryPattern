@model Product

@{
    ViewData["Title"] = "Product Details";
}

<h2>Product Details</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <td>@Model.ProductId</td>
    </tr>
    <tr>
        <th>Name</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Description</th>
        <td>@Model.Description</td>
    </tr>
    <tr>
        <th>Price</th>
        <td>@Model.Price.ToString("C")</td>
    </tr>
    <tr>
        <th>Stock</th>
        <td>@Model.Stock</td>
    </tr>
    <tr>
        <th>Category</th>
        <td>@Model.Category</td>
    </tr>
    <tr>
        <th>Date Added</th>
        <td>@Model.DateAdded.ToString("g")</td>
    </tr>
</table>

<a href="/Product" class="btn btn-secondary">Back to List</a>
