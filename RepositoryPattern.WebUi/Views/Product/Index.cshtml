@model IEnumerable<Product>

@{
    ViewData["Title"] = "Products";
}

<h2 class="mb-3">Products</h2>

<a href="/Product/Create" class="btn btn-primary mb-3">Add New Product</a>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductId</td>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.Price.ToString("C")</td>
                <td>@product.Stock</td>
                <td>@product.Category</td>
                <td>
                    <a href="/Product/Details/@product.ProductId" class="btn btn-info btn-sm">Details</a>
                    <a href="/Product/Edit/@product.ProductId" class="btn btn-warning btn-sm">Edit</a>
                    <a href="/Product/Delete/@product.ProductId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
